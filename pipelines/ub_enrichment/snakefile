rule tsv_to_clus:
    input:
        script = "../../analysis_scripts/clus_io.py",
        qvalues = "../../qvalues/HMEC.CAGE.tsv"
    output: 
        "../../tmp/HMEC.CAGE.clus"
    shell:
        "python {input.script} tsv2clus {input.qvalues} {output}"

rule clus_to_bed:
    input:
        script = "../../analysis_scripts/clus_io.py",
        clus_file = "../../tmp/HMEC.CAGE.tsv"
    output: 
        "../../tmp/HMEC.CAGE.bed"
    shell:
        "python {input.script} clus2bed {input.clus_file} {output}"
